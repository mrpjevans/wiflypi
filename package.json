{
	"name": "wifly",
	"version": "0.0.0",
	"description": "A wifi configuration utility for portable Pis",
	"scripts": {
		"watcher": "ts-node src/watcher/watcher.ts",
		"lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts)\"",
		"build": "rm -rf ./dist && npm run lint && npm run format && tsc",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mrpjevans/wifly.git"
	},
	"keywords": [
		"raspberrypi",
		"wifi"
	],
	"author": "PJ Evans <pj@mrpjevans.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/mrpjevans/wifly/issues"
	},
	"homepage": "https://github.com/mrpjevans/wifly#readme",
	"devDependencies": {
		"@types/node": "^20.10.6",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.1.1"
	},
	"dependencies": {
		"pino": "^8.17.2",
		"pino-pretty": "^10.3.1"
	}
}
